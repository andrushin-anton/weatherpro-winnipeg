<div class="col-md-6 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>New Seller</h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <%= form_for @seller, :url => url_for(:controller => 'sellers', :action => 'create'), :html => {:class => 'form-horizontal form-label-left input_mask'} do |f| %>
      <% if @seller.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
          <% @seller.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12">First Name</label>
          <div class="col-md-9 col-sm-9 col-xs-12">
            <%= f.text_field :first_name, :class => 'form-control', :placeholder => 'First Name' %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12">Last Name</label>
          <div class="col-md-9 col-sm-9 col-xs-12">
            <%= f.text_field :last_name, :class => 'form-control', :placeholder => 'Last Name' %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12">Email</label>
          <div class="col-md-9 col-sm-9 col-xs-12">
            <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email' %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12">Password</label>
          <div class="col-md-9 col-sm-9 col-xs-12">
            <%= f.password_field :password, :class => 'form-control', :placeholder => '' %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12">Password confirmation</label>
          <div class="col-md-9 col-sm-9 col-xs-12">
            <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => '' %>
          </div>
        </div>

        <%= f.hidden_field :role, :value => 'seller' %>

        <div class="ln_solid"></div>
        <div class="form-group">
          <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
            <%= link_to 'Cancel', :back, :class => 'btn btn-primary' %>
            <%= f.submit 'Submit', :class => 'btn btn-success' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>