<div class="page-title">
  <div class="title_left">
    <h3>Search <small></small></h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <%= form_tag appointments_find_path, :method => 'get' do %>
          <div class="input-group">
            <input type="text" name="search" value="<%= params[:search] %>" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
          <%= submit_tag "Go!", :name => nil, :class => "btn btn-default search" %>
          </span>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-6 col-sm-6 col-xs-12" style="width:100%">
  <div class="x_panel">
    <div class="x_content">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Status</th>
          <th>Schedule Date</th>
          <th>First Name</th>
          <th>Address</th>
          <th>Comments</th>
          <th>#Edit</th>
        </tr>
        </thead>
        <tbody>
        <% @appointments.each do |appointment| %>
            <tr>
              <td style="background-color: <%=appointment.color%>"><%= appointment.status %></td>
              <td><%= appointment.schedule_time.to_formatted_s(:short) %></td>
              <td><%= appointment.customer.first_name %></td>
              <td><%= appointment.address %></td>
              <td><%= truncate(appointment.comments, :length => 17) %></td>
              <td><%= link_to '<i class="fa fa-folder"></i> View'.html_safe, link_to_appointment(current_user, appointment), :class => 'btn btn-primary btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>